{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:tailwindcss/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "import"
  ],
  "rules": {
    // Your specific rules.
    "tailwindcss/migration-from-tailwind-2": "off",
    "tailwindcss/no-custom-classname": "off",
    "no-unused-vars": "warn",
    "import/order": [
      "error",
      {
        "groups": [
          "external",
          "builtin",
          "internal"
        ],
        "pathGroups": [
          {
            "pattern": "@/api/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/component/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/libs/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/config",
            "group": "internal",
            "position": "after"
          }
        ],
        "newlines-between": "always-and-inside-groups",
        "alphabetize": {
          "order": "asc",
          "orderImportKind": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js"
      ],
      "parser": "@typescript-eslint/parser"
    }
  ]
}